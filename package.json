{
  "name": "@smsnm/bookit",
  "version": "1.1.0",
  "author": "Samsonium",
  "license": "MIT",
  "private": false,
  "description": "BOOKit (Backend Object Oriented Kit) is a strongly typed backend framework based on OOP principles",
  "main": "lib/index.js",
  "types": "types/index.d.ts",
  "files": [
    "lib/*"
  ],
  "keywords": [
    "backend",
    "framework",
    "library",
    "OOP",
    "object",
    "oriented",
    "programming",
    "js",
    "javascript",
    "ts",
    "typescript"
  ],
  "scripts": {
    "docs": "typedoc src --out pages --readme README.md && mkdir ./pages/docs && cp docs/Logotype.png pages/docs/Logotype.png",
    "test": "jest --config jest.config.json",
    "build": "tsc",
    "lint": "eslint --ignore-path .eslintignore --ext .js,.ts .",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "engines": {
    "node": ">= 16.0.0"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "eslint": "^8.39.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "typedoc": "^0.24.7",
    "typescript": "^4.9.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Samsonium/bookit.git"
  },
  "bugs": {
    "url": "https://github.com/Samsonium/bookit/issues"
  }
}
